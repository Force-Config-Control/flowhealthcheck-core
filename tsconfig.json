{
  "compilerOptions": {
    "module": "es2020",  // Change this line
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "out",
    "lib": [
      "es2020.string",  // You might want to update this to include es2020 as well
      "es6"
    ],
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "out/**",
    ".idea/**",
    "src/data/CustomRuleExample.ts",
    "tests/**/*.test.ts"
  ]
}
